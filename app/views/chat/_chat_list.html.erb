<table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th>私</th>
      <th>相手</th>
    </tr>
  </thead>

  <tbody>
    <% chats.each do |chat| %>
      <tr>

        <% if chat.user_id == current_user.id %>
          <td>私<%= chat.message %></td>
        <% else %>
          <td>相手<%= chat.message %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>