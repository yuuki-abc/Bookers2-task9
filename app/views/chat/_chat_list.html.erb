<table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th>私</th>
      <th class="text-right">相手</th>
    </tr>
  </thead>

  <tbody>
    <% chats.each do |chat| %>
      <tr>

        <% if chat.user_id == current_user.id %>
          <td><%= chat.message %></td>
          <td></td>
        <% else %>
          <td class="text-right"></td>
          <td class="text-right"><%= chat.message %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>

</table>